# Database
DATABASE_URL=postgresql://username:password@host:5432/database

# GitHub API
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# Supabase (Public keys - safe to expose client-side)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# OpenAI API
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
OPENAI_PROJECT_ID=proj_your_project_id_here

# Admin Authentication
# Generate a secure random password: openssl rand -base64 48
ADMIN_SECRET=your_secure_random_password_here

# Cron Job Security (for Vercel cron jobs)
# Generate a secure random token: openssl rand -base64 48
CRON_SECRET=your_cron_secret_token_here

# SendGrid Email Service
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=SIMD Digest
